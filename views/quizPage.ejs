<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <!-- CSS only -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
     <head>
        <link
          rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
        />
        <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
      </head>
    <title>Quiz Page</title>
    <style>
        .activ{
            background-color: darkorange;
        }
    </style>
</head>
<body class="bg-black-50">
    <h3 class="container text-danger my-5">Bes Emeklilik Sınavı App</h3>


    <div class="container">
        <% for(let i = 0; i < quiz.length ; i++){ %> 
        <div data-aos="fade-down-right" class="card my-5 shadow">
            <div class="card-body">
                <h5><%= quiz[i].SoruSayisi %>.Soru ) <%= quiz[i].SoruMetni %></h5>
                <p class="card-text"><button id="<%= quiz[i]._id %>cvp1" onclick="check('<%= quiz[i]._id %>cvp1','<%= quiz[i].Cevap1 %>','<%= quiz[i].DogruCevap %>')" type="button" class="btn btn-warning animate__animated"><%= quiz[i].Cevap1 %></button></p>
                <p class="card-text"><button id="<%= quiz[i]._id %>cvp2" onclick="check('<%= quiz[i]._id %>cvp2','<%= quiz[i].Cevap2 %>','<%= quiz[i].DogruCevap %>')" type="button" class="btn btn-warning animate__animated"><%= quiz[i].Cevap2 %></button></p>
                <p class="card-text"><button id="<%= quiz[i]._id %>cvp3" onclick="check('<%= quiz[i]._id %>cvp3','<%= quiz[i].Cevap3 %>','<%= quiz[i].DogruCevap %>')" type="button" class="btn btn-warning animate__animated"><%= quiz[i].Cevap3 %></button></p>
                <p class="card-text"><button id="<%= quiz[i]._id %>cvp4" onclick="check('<%= quiz[i]._id %>cvp4','<%= quiz[i].Cevap4 %>','<%= quiz[i].DogruCevap %>')" type="button" class="btn btn-warning animate__animated"><%= quiz[i].Cevap4 %></button></p>
            </div>
        </div>
        <% } %>
    </div>

    <div class="container">
        <div>
            <%   if (pages > 0) { %>
               
               <ul class="nav tm-paging-links">
                   <%  for(let i = 1 ; i <= pages ; i++) { %>
                     <%  if ( i == current) { %>
                   <li class="nav-item activ"><a href="/quizPage/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                       <%   } else if ( i < pages)  {%>
                   <li class="nav-item"><a href="/quizPage/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                       <%   } else { %>
                           <li class="nav-item"><a href="/quizPage/?page=<%= i %>" class="nav-link tm-paging-link">></a></li>
                       <%   } %>
                   
                   <%   } %>
               </ul>
            <%   } %>
        </div>
    </div>



    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();

        function check(quiz,tiklanan,dcevap)
        {
            console.log(tiklanan);
            console.log(dcevap);
            console.log(quiz)

            boya =  document.getElementById(quiz);
                
            if(tiklanan == dcevap)
            {
                boya.classList.replace('btn-warning','btn-success')
                boya.classList.add('animate__rubberBand')
            }
            else{
                boya.classList.replace('btn-warning','btn-danger')
                boya.classList.add('animate__shakeX')

            }
        }

    </script>


</body>
</html>